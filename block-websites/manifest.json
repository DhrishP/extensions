{
  "manifest_version": 3,
  "name": "Website Blocker & Redirector",
  "version": "1.1",
  "description": "Block distracting websites and redirect to productive alternatives",
  "permissions": ["storage", "declarativeNetRequest", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
