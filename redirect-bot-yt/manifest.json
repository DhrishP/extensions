{
  "manifest_version": 3,
  "name": "YouTube Productivity Filter",
  "version": "1.0",
  "description": "Redirects YouTube pages with non-productive content",
  "permissions": ["webNavigation", "tabs", "storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "index.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}
