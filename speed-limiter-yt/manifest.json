{
  "manifest_version": 3,
  "name": "YouTube Speed Limiter",
  "version": "1.0.0",
  "description": "Limit YouTube playback speed to a selectable maximum. Prevents videos from playing faster than your chosen speed limit.",
  "author": "Dhrish Parekh",
  "homepage_url": "https://github.com/DhrishP/youtube-speed-limiter",
  "permissions": ["storage"],
  "host_permissions": ["*://www.youtube.com/*"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "YouTube Speed Limiter",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "minimum_chrome_version": "88"
}
