{
  "manifest_version": 3,
  "name": "YouTube Speed Limiter",
  "version": "1.0",
  "description": "Limit YouTube playback speed to a selectable maximum",
  "permissions": ["scripting", "tabs", "storage"],
  "action": {
    "default_title": "Set max playback speed",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
